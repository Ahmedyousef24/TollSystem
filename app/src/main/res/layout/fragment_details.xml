<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="55dp"
    android:background="@color/OrangeYellowColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Afternoon"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07 April 2019"
            android:layout_below="@+id/greetings"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"/>

        <RelativeLayout
            android:layout_width="318dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/date"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="Öresjö Balance"/>
                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_below="@+id/banlanceid"
                    android:textColor="@color/white"
                    android:text="200.35 kr"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:text="Available balance"/>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/Textgrey"/>

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="106dp"
                        android:layout_height="40dp"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="Pay All Trips "
                        android:textColor="@color/OrangeYellowColor" />
                    <TextView
                        android:layout_marginLeft="106dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/OrangeYellowColor"
                        android:layout_width="106dp"
                        android:text="Unpaid Trips"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_width="106dp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-black"
                        android:textColor="@color/OrangeYellowColor"
                        android:layout_marginLeft="212dp"
                        android:text="Topup"
                        android:layout_height="40dp" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
